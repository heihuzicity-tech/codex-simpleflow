{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {"type": ["string", "null"]},
    "description": {"type": ["string", "null"]},
    "flow": {
      "type": "object",
      "properties": {
        "preferences": {
          "type": "object",
          "properties": {
            "timestamp_format": {"type": "string"},
            "timezone": {"type": "string"},
            "retention": {
              "type": "object",
              "properties": {
                "sessions": {
                  "type": "object",
                  "properties": {
                    "keep_open": {"type": "integer"},
                    "keep_archives": {"type": "integer"}
                  }
                },
                "reports": {
                  "type": "object",
                  "properties": {
                    "keep_latest": {"type": "integer"}
                  }
                }
              }
            },
            "natural_language": {"type": "boolean"},
            "require_slash": {"type": "boolean"}
          }
        }
      }
    }
  }
}

